@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Inicio de sesión";
}

<div style="width: 30rem; margin: auto; top= 50%;">
    <h1>Iniciar sesión</h1>
    <hr class="red-line" />

    <p class="text-danger text-center">@TempData["Message"]</p> <!-- mensaje de controlador a javascript -->

    <form action="Acceder" method="POST">
        <!--Input de correo-->
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="bi bi-person"></i> </span>
                </div>
                <input name="correo" class="form-control" placeholder="Introducir CORREO" type="email" value="@TempData["Correo"]">
            </div>
        </div>
        <!--Input de contraseña-->
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="bi bi-lock"></i> </span>
                </div>
                <input name="contrasena1" class="form-control" placeholder="**********" type="password">
            </div>
        </div>

        <!--Botón acceder-->
        <div class="form-group">
            <br />
            <button type="submit" class="btn btn-gob">Acceder</button>
        </div>
        <br />
        <p class="text-center">¿No tienes una cuenta? crea una <a href="#">aquí</a></p>
    </form>
</div>