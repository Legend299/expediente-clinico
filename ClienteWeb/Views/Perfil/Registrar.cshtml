@{
    ViewData["Title"] = "Registrar Cuenta";
}
<div style="width: 30rem; margin: auto; top: 50%;">
    <h1>Registrarse</h1>
    <hr class="red-line" />

     @if (TempData["Mensaje"] != null)
     {
     <div class="alert alert-danger" role="alert">@TempData["Mensaje"]</div>
     }
    <form action="RegistrarCuenta" method="POST">
        <!--Input de correo-->
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="bi bi-person"></i> </span>
                </div>
                <input name="correo" class="form-control" placeholder="Introducir CORREO" type="email" value="@TempData["Correo"]">
            </div>
        </div>

        <!--Input de contraseña-->
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="bi bi-lock"></i> </span>
                </div>
                <input name="contrasena1" class="form-control" placeholder="Ingresa CONTRASEÑA" type="password">
            </div>
        </div>

        <!--Input de contraseña-->
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="bi bi-lock"></i> </span>
                </div>
                <input name="contrasena2" class="form-control" placeholder="Verifica CONTRASEÑA" type="password">
            </div>
        </div>

        <!--Botón registrarse-->
        <div class="form-group">
            <br />
            <button type="submit" class="btn btn-gob">Registrarse</button>
        </div>
        <br />
        <p class="text-center">¿Ya tienes una cuenta? Ingresa <a asp-area="" asp-controller="Perfil" asp-action="InicioSesion">aquí</a></p>
    </form>
</div>
