@model List<webservice1.Models.Especialidade>
@{
    ViewData["Title"] = "Verificar Médico";
}
<div style="width: 30rem; margin: auto; top= 50%;">
    <h1>VERIFICAR MÉDICO</h1>
    <hr class="red-line" />

     @if (TempData["Message"] != null)
     {
     <div class="alert alert-danger" role="alert">@TempData["Message"]</div>
     }
    <form action="Verificar" method="POST">
        <!--Input de cédula-->
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="bi bi-building"></i> </span>
                </div>
                <input name="cedula" class="form-control" placeholder="Cédula profesional" type="number" value="" maxlength="8" required>
            </div>
        </div>
        <!--Input de especialdiad-->
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="bi bi-lock"></i> </span>
                </div>
                 <select name="especialidad" class="form-control" required>
                    @foreach(var especialidad in Model)
                    {
                        <option value="@especialidad.IdEspecialidad">@especialidad.Nombre</option>
                    }
                  </select>
            </div>
        </div>

        <!--Botón acceder-->
        <div class="form-group">
            <br />
            <button type="submit" class="btn btn-gob">Verificar</button>
        </div>
        <br /> 
    </form>
</div>
