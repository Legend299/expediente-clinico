<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:id="@+id/ShowExpedienteEditar"
    tools:context=".ui.expediente.ExpedienteEditarFragment"
    android:orientation="horizontal">

    <!--ID EXPEDIENTE-->
    <TextView
        android:id="@+id/lblIdExpediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:text="ID EXPEDIENTE"
        android:textColor="@color/Azul" />

    <TextView
        android:id="@+id/txtShowIdExpediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblIdExpediente"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:text="0"
        android:textColor="@color/black" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtShowIdExpediente"
        android:background="#2DB64568" />

    <!--NOMBRE-->
    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtShowIdExpediente"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="NOMBRE "
        android:textColor="@color/Azul" />

    <EditText
        android:id="@+id/txtShowNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblNombre"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:text="Nombre Expediente"
        android:textColor="@color/black" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/txtShowNombre"
        android:layout_centerHorizontal="true"
        android:background="#2DB64568" />

    <!--APELLIDO-->
    <TextView
        android:id="@+id/lblApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtShowNombre"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="APELLIDO "
        android:textColor="@color/Azul" />

    <EditText
        android:id="@+id/txtShowApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblApellido"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:text="Apellido Expediente"
        android:textColor="@color/black" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtShowApellido"
        android:background="#2DB64568" />

    <!--CURP-->
    <TextView
        android:id="@+id/lblCurp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtShowApellido"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="CURP "
        android:textColor="@color/Azul" />

    <EditText
        android:id="@+id/txtShowCurp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblCurp"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:text="Curp Expediente"
        android:textColor="@color/black" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtShowCurp"
        android:background="#2DB64568" />

    <!--ESTADO-->
    <TextView
        android:id="@+id/lblEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtShowCurp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="ESTADO "
        android:textColor="@color/Azul" />

    <TextView
        android:id="@+id/lblShowEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblEstado"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:text="Estado Expediente"
        android:textColor="@color/black" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lblShowEstado"
        android:background="#2DB64568" />

    <!--MUNICIPIO-->
    <TextView
        android:id="@+id/lblMunicipio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/lblShowEstado"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="MUNICIPIO "
        android:textColor="@color/Azul" />

    <TextView
        android:id="@+id/lblShowMunicipio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lblMunicipio"
        android:padding="15dp"
        android:text="Municipio Expediente"
        android:textColor="@color/black" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lblShowMunicipio"
        android:background="#2DB64568" />

    <!--SEXO-->
    <TextView
        android:id="@+id/lblSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/lblShowMunicipio"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="SEXO "
        android:textColor="@color/Azul" />

    <Spinner
        android:id="@+id/spShowSexo"
        style="?android:spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblSexo"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:text="Sexo Expediente"
        android:textColor="@color/black" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/spShowSexo"
        android:background="#2DB64568" />

    <!--TELEFONO-->
    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/spShowSexo"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="TELEFONO "
        android:textColor="@color/Azul" />

    <EditText
        android:id="@+id/txtShowTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblTelefono"
        android:layout_alignParentRight="true"
        android:padding="15dp"
        android:inputType="phone"
        android:text="0000000000"
        android:textColor="@color/black" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtShowTelefono"
        android:background="#2DB64568" />

    <!--FECHA DE NACIMIENTO-->
    <TextView
        android:id="@+id/lblFechaDeNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtShowTelefono"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:text="FECHA DE NACIMIENTO "
        android:textColor="@color/Azul" />

    <Button
        android:id="@+id/lblShowFechaDeNacimiento"
        style="?android:spinnerStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lblFechaDeNacimiento"
        android:layout_alignParentRight="true"
        android:onClick="openDatePicker"
        android:padding="15dp"
        android:text="01 ABRIL 2020"
        android:textColor="@color/black" />



    <View
        android:id="@+id/separadorUlt"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lblShowFechaDeNacimiento"
        android:background="#2DB64568" />

    <!--BOTONES-->
    <Button
        android:id="@+id/btnEditar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblShowFechaDeNacimiento"
        android:layout_marginLeft="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:text="GUARDAR"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_alignTop="@+id/btnEditar"
        android:text="CANCELAR"
        android:textColor="@color/white" />

    <!--progress bar for loading -->
    <ProgressBar
        android:id="@+id/idLoadingPB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center"
        android:visibility="gone" />

</RelativeLayout>